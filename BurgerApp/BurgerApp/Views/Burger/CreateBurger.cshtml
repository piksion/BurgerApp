﻿@using BurgerApp.ViewModels.Burgers;
@model CreateBurgerViewModel

<div class="row">
    <div class="col-md-4">
        <input type="hidden" asp-for="BurgerId" />
        <form asp-action="CreateBurgerPost" method="post">
            <div class="form-group">
                <label asp-for="BurgerName" class="control-label"></label>
                <input type="text" asp-for="BurgerName" />
            </div>
            <div class="form-group">
                <label asp-for="BurgerPrice" class="control-label"></label>
                <input type="number" asp-for="BurgerPrice" />
            </div>
            <div class="form-group">
                <label asp-for="IsVegetarian" class="control-label"></label>
                <input type="checkbox" asp-for="IsVegetarian" />
            </div>
            <div class="form-group">
                <label asp-for="HasFries" class="control-label"></label>
                <input type="checkbox" asp-for="HasFries" />
            </div>
            <div class="form-group">
                <label asp-for="IsVegan" class="control-label"></label>
                <input type="checkbox" asp-for="IsVegan" />
            </div>
            <button type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
</div>