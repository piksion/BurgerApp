@using BurgerApp.ViewModels.Orders;
@model CreateOrderViewModel

<h2>Create Order</h2>
<div class="row">
    <div class="col-md-4">
        <input type="hidden" asp-for="OrderId" />
        <input type="hidden" asp-for="BurgerId" />
        <form asp-action="CreateOrderPost" method="post">
            <div class="form-group">
                <label asp-for="IsDelivered" class="control-label"></label>
                <input type="checkbox" asp-for="IsDelivered" />
            </div>
            <div class="form-group">
                <label asp-for="OrderName" class="control-label"></label>
                <input type="text" asp-for="OrderName" />
            </div>
            <div class="form-group">
                <label asp-for="OrderAddress" class="control-label"></label>
                <input type="text" asp-for="OrderAddress" />
            </div>
            <div class="form-group">
                <label asp-for="OrderLocation" class="control-label"></label>
                <input type="text" asp-for="OrderLocation" />
            </div>
            <button type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
</div>